<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>DataPass</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "dsfr.min", "application-turbo-track": "reload" %>
    <%= javascript_include_tag "dsfr.module.min.js", type: 'module' %>
    <%= javascript_include_tag "dsfr.nomodule.min.js", nomodule: true %>
    <%= stylesheet_link_tag "utility/dsfr-utility.min", "application-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

    <%  Dir[Rails.root.join("app/assets/stylesheets/components/*.css")].each do |path| %>
      <%= stylesheet_link_tag "components/#{File.basename(path)}", "data-turbo-track": "reload" %>
    <% end %>

    <%  Dir[Rails.root.join("app/assets/stylesheets/pages/*.css")].each do |path| %>
      <%= stylesheet_link_tag "pages/#{File.basename(path)}", "data-turbo-track": "reload" %>
    <% end %>

    <%= javascript_importmap_tags %>

    <%= render partial: 'shared/favicons' %>
    <%= render partial: 'shared/matomo' %>
  </head>

  <body>
    <%= render layout: 'shared/modal', locals: { id: 'main-modal' } do %>
      <%= render partial: 'shared/loader' %>
    <% end %>

    <% if content_for?(:extra_modal) %>
      <%= yield(:extra_modal) %>
    <% end %>

    <%= render partial: 'layouts/header' %>

    <main>
      <% if content_for?(:body) %>
        <%= yield(:body) %>
      <% else %>
        <%= yield %>
      <% end %>
    </main>

    <%= render partial: 'layouts/footer' %>
  </body>
</html>
