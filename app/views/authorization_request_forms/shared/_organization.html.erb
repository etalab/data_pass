<div class="fr-container-fluid">
  <div class="fr-grid-row">
    <div class="fr-col-12 fr-col-lg-6">
      <div id="<%= dom_id(@authorization_request.applicant, :authorization_request_card) %>" class="fr-basic-card">
        <h3>
          <%= t('.you.title') %>
        </h3>

        <ul>
          <li>
            <strong><%= current_user.full_name %></strong>
          </li>
          <% %i[email job_title].each do |attr| %>
            <li>
              <%= current_user.public_send(attr) %>
            </li>
          <% end %>
          <li>
            FIXME phone number
          </li>
        </ul>
      </div>
    </div>

    <div class="fr-col-12 fr-col-lg-6">
      <div id="<%= dom_id(@authorization_request.organization, :authorization_request_card) %>" class="fr-basic-card">
        <h3>
          <%= t('.organization.title') %>
        </h3>

        <ul>
          <li>
            <strong><%= current_organization.raison_sociale %></strong>
          </li>
          <% %i[siret].each do |attr| %>
            <li>
              <%= current_organization.public_send(attr) %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
