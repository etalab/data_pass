<!DOCTYPE html>

<html
  style="background-color: <%= params.dig(:lookbook, :display, :bg_color) || "white" %>"
>
  <head>
    <title>Component Preview</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_link_tag "dsfr-fonts", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dsfr", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dsfr-utility", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "dsfr-extensions", "data-turbo-track": "reload" %>

    <%= javascript_include_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body
    style="padding: <%= params.dig(:lookbook, :display, :padding) || "20px" %>;"
  >
    <div
      style="
    margin-left: auto;
    margin-right: auto;
    max-width: <%= params.dig(:lookbook, :display, :max_width) || "100%" %>
  "
    >
      <%= yield %>

      <!-- rendered preview will be injected here -->
    </div>
  </body>
</html>
