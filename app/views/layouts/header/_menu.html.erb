<div
  class="fr-header__menu fr-modal"
  id="modal-header-menu"
  aria-labelledby="fr-btn-menu-mobile-1"
>
  <div class="fr-container">
    <button
      class="fr-link--close fr-link"
      aria-controls="modal-header-menu"
      aria-label="Fermer le menu"
    >
      Fermer
    </button>

    <div class="fr-header__menu-links"></div>

    <nav class="fr-nav" id="navigation-header-menu" aria-label="Menu principal">
      <ul class="fr-nav__list">
        <% if namespace?(:instruction) %>
          <%= render InstructorMenuComponent.new(
            show_drafts: policy([:instruction, :instructor_draft_request]).enabled?,
            show_templates: policy([:instruction, :message_template]).index?
          ) %>
        <% end %>
      </ul>
    </nav>
  </div>
</div>
