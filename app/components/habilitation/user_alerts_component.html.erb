<% if show_update_in_progress_alert? %>
  <%= dsfr_notice(
    title: update_in_progress_title,
    description: update_in_progress_message,
    type: 'info',
    html_attributes: { class: 'fr-notice--full-width fr-mb-4w' }
  ) %>
<% end %>

<% if show_access_callout? %>
  <%= dsfr_callout(title: access_callout_title, html_attributes: { class: 'fr-my-16v' }) do |callout| %>
    <% callout.with_action_zone do %>
      <%= link_to access_callout_button_text, access_callout_link, class: 'fr-btn fr-btn--icon-right fr-icon-external-link-line', target: '_blank' %>
    <% end %>
    <%= access_callout_content %>
  <% end %>
<% end %>
