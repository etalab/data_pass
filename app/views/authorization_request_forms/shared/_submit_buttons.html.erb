
<% content_for :sticky_bar do %>
  <div class="fr-container">
    <div class="fr-btns-group fr-btns-group--inline fr-btns-group--icon-left fr-btns-group--right">
      <% if policy(@authorization_request).update? %>
        <%= f.button t('authorization_request_forms.form.save'), name: :save, type: :submit, id: :save_authorization_request, class: %w(fr-btn fr-btn--secondary fr-icon-save-line fr-btn--icon-left fr-mb-0) %>
      <% end %>

      <% if policy(@authorization_request).review? %>
        <%= f.button t('authorization_request_forms.form.review'), name: :review, type: :submit, id: :review_authorization_request, class: %w(fr-btn fr-icon-checkbox-line fr-btn--icon-left fr-mb-0) %>
      <% elsif @authorization_request.form.single_page? %>
        <%= f.button t('authorization_request_forms.form.save_and_review'), name: :review, type: :submit, id: :review_authorization_request, class: %w(fr-btn fr-icon-checkbox-line fr-btn--icon-left fr-mb-0) %>
      <% end %>
    </div>
  </div>
<% end %>

