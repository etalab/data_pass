
<h2 class="fr-mt-16v">
  <%= t('.title', authorization_name: @authorization_definition.name) %>
</h2>

<div class="fr-mb-4w">
  <div class="border-frame-text fr-my-3w">
    <%= t('authorization_request_forms.new.api.organization.start_text', organization_raison_sociale: current_organization.raison_sociale, organization_siret: current_organization.siret).html_safe %>
  </div>

  <p>
    <%= t('.multiple_forms.description', authorization_name: @authorization_definition.name) %>
  </p>

  <ol>
    <% @authorization_definition.available_forms.each do |authorization_request_form| %>
      <li>
        <%= link_to authorization_request_form.name, start_authorization_request_forms_path(form_uid: authorization_request_form.id), class: 'fr-link' %>
      </li>
    <% end %>
  </ol>
</div>
