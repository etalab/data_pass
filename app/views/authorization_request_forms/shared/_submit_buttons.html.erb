<div class="fr-btns-group fr-btns-group--inline-lg fr-btns-group--icon-left fr-btns-group--right fr-my-3w">
  <% if policy(@authorization_request).update? %>
    <%= f.button t('authorization_request_forms.form.save'), name: :save, type: :submit, id: :save_authorization_request, class: %w(fr-btn fr-btn--sm fr-btn--secondary fr-icon-save-line fr-btn--icon-left) %>
  <% end %>

  <% if policy(@authorization_request).review? %>
    <%= f.button t('authorization_request_forms.form.review'), name: :review, type: :submit, id: :review_authorization_request, class: %w(fr-btn fr-btn--sm fr-icon-checkbox-line fr-btn--icon-left) %>
  <% end %>
</div>

