<div class="simple-page-action-wrapper fr-pt-5w">
  <div class="fr-grid-row fr-grid-row--center">
    <div class="fr-col-md-offset-1 fr-col-md-10">
      <turbo-frame id="main-modal-content">
        <%= form_with model: @instructor_draft_request, url: instruction_instructor_draft_request_invite_index_path(@instructor_draft_request), method: :post, data: { turbo_frame: 'main-modal-content' } do |f| %>
          <div class="fr-modal__content">
            <h1 class="fr-modal__title">
              <%= t('.title') %>
            </h1>

            <p>
              <%= t('.description') %>
            </p>

            <% if @error.present? %>
              <div class="fr-alert fr-alert--error fr-my-2w">
                <h3 class="fr-alert__title">
                  <%= t('.error.title') %>
                </h3>

                <%= @error.html_safe %>
              </div>
            <% end %>

            <%= f.dsfr_email_field :applicant_email, placeholder: t('.applicant_email.placeholder'), value: params[:applicant_email], required: true %>

            <%= f.dsfr_text_field :organization_siret, placeholder: t('.organization_siret.placeholder'), value: params[:organization_siret], required: true %>

            <%= f.dsfr_text_area :comment, placeholder: t('.comment.placeholder'), value: params[:comment], required: true %>
          </div>

          <div class="fr-modal__footer">
            <div class="fr-btns-group fr-btns-group--right fr-btns-group--inline-reverse fr-btns-group--inline-lg fr-btns-group--icon-left">
              <%= f.button t('.invite'), type: :submit, class: %w(fr-btn fr-btn--primary fr-icon-mail-line fr-btn--icon-left) %>
              <%= link_to t('.cancel'), '#', class: %w(fr-btn fr-btn--secondary), aria: { controls: 'main-modal' } %>
            </div>
          </div>
        <% end %>
      </turbo-frame>
    </div>
  </div>
</div>
