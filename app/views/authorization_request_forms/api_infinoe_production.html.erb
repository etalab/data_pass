<%= authorization_request_form(@authorization_request) do |f| %>
  <fieldset class="fr-fieldset" aria-label="feedme" aria-describedby="name-1-fieldset-messages">
    <h3>
      <%= t('authorization_request_forms.api_infinoe_production.sandbox_authorization_request.title') %>
    </h3>

    <div class="fr-fieldset__element">
      <%=
        t(
          'authorization_request_forms.api_infinoe_production.sandbox_authorization_request.description',
          authorization_request_name: @authorization_request.sandbox_authorization_request.name,
          authorization_request_link: link_to('Lien', authorization_request_form_path(form_uid: @authorization_request.sandbox_authorization_request.form.uid, id: @authorization_request.id))
        ).html_safe
      %>
    </div>
  </fieldset>

  <%= render partial: 'authorization_request_forms/shared/api_infinoe_production/recette_fonctionnelle', locals: { f: f } %>
  <%= render partial: 'authorization_request_forms/shared/api_infinoe_production/homologation_securite', locals: { f: f } %>
  <%= render partial: 'authorization_request_forms/shared/api_infinoe_production/volumetrie', locals: { f: f } %>

  <%= render partial: 'authorization_request_forms/shared/submit_buttons', locals: { f: f } %>
<% end %>
