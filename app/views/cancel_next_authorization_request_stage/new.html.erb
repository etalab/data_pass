<div class="simple-page-action-wrapper fr-pt-5w">
  <div class="fr-grid-row fr-grid-row--center">
    <div class="fr-col-md-offset-1 fr-col-md-10">
      <turbo-frame id="main-modal-content">
        <div class="fr-modal__content">
          <h1 class="fr-modal__title">
            <%= t('.title') %>
          </h1>
          <%= simple_format(t('.description')) %>

          <p>
            <strong><%= t('.confirmation_question') %></strong>
          </p>
        </div>

        <div class="fr-modal__footer">
          <div class="fr-btns-group fr-btns-group--right fr-btns-group--inline-reverse fr-btns-group--inline-lg fr-btns-group--icon-left">
            <%= link_to t('.back'), authorization_request_path(@authorization_request), class: %w[fr-btn fr-btn--secondary fr-mr-2w] %>

            <%= button_to t('.confirm'), cancel_next_authorization_request_stage_path(@authorization_request), method: :post, class: %w[fr-btn fr-btn--primary fr-icon-error-line fr-btn--icon-left] %>
          </div>
        </div>
      </turbo-frame>
    </div>
  </div>
</div>
