<%= f.info_for(:safety_certification) %>

<fieldset class="fr-fieldset fr-mb-4w" data-controller="remove-attached-file">
  <div class="fr-fieldset__element">
    <%= f.dsfr_file_field :safety_certification_document, required: true %>
  </div>
</fieldset>

<fieldset class="fr-fieldset" data-controller="personal-data-duree-conservation-justification" aria-label="feedme" aria-describedby="name-1-fieldset-messages">
  <div class="fr-fieldset__element">
    <%= f.dsfr_text_field :safety_certification_authority_name, required: true %>
  </div>

  <div class="fr-fieldset__element">
    <%= f.dsfr_text_field :safety_certification_authority_function, required: true %>
  </div>

  <div class="fr-fieldset__element">
    <%= f.dsfr_date_field :safety_certification_begin_date, required: true %>
  </div>

  <div class="fr-fieldset__element">
    <%= f.dsfr_date_field :safety_certification_end_date, required: true %>
  </div>
</fieldset>
